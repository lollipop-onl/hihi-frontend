$primary = #262d39

.regist
  &--wrapper
    @extends .wrapper
    @extends .wrapper--margin
    padding-bottom 48px
    padding-top 48px
  &--input
    background lighten($primary, 95%)
    border 1px solid  lighten($primary, 90%)
    border-radius 2px
    box-sizing border-box
    color lighten($primary, 15%)
    display block
    font-family: "Noto Sans Japanese"
    font-size 14px
    font-weight bold
    height 48px
    margin-bottom 24px
    outline none
    padding 0 1.2em
    transition all .2s ease
    width 100%
    &::-webkit-input-placeholder
      color lighten($primary, 50%)
      font-weight normal
    &:focus
      background lighten($primary, 98%)
      border-color lighten($primary, 70%)
  &--select
    @extends .regist--input
    cursor pointer
    font-weight normal
    display flex
    justify-content space-between
    margin-top 16px
  &--footer
    display flex
    justify-content space-between
  &--submit
    background lighten($primary, 15%)
    border 1px solid lighten($primary, 10%)
    border-radius 2px
    color lighten($primary, 95%)
    cursor pointer
    font-family: "Noto Sans Japanese"
    font-size 14px
    height 42px
    padding 0 32px
    transition all .2s ease
    &:hover
      opacity .8
    &[disabled]
      background none
      border-color lighten($primary, 60%)
      color lighten($primary, 60%)
    &-icon
      margin-right 5px
  &--info
    &-item
      color lighten($primary, 40%)
      font-size 12px
      &:not(:first-child)
        margin-top 12px
