.login
  align-items center
  display flex
  flex-direction column
  height 100vh
  justify-content center
  width 100%
  h1
    color #111
    font-size 32px
    font-weight 200
  p
    color #888
    font-size 14px
    line-height 2
    margin-top 28px
    text-align center
  &--button
    align-items center
    background #DD4B39
    border-radius 4px
    color rgba(#fff, .8)
    cursor pointer
    display flex
    font-size 16px
    height 52px
    justify-content center
    margin-top 42px
    transition all .12s cubic-bezier(0.23, 1, 0.32, 1)
    width 180px
    &:hover
      transform scale3d(1.1, 1.1, 1.1)
    &:active
      transform scale3d(1, 1, 1)
    &__active
      background darken(#dd4b39, 12%)
  &--icon
    font-size 20px
    margin-right 12px
  &--loader
    opacity .8
    transform scale(.5)
