.dashboard
  display grid
  grid-template 'sidebar content' 1fr \
                'sidebar content' 1fr \
                / auto   1fr
  height 100vh
  &--sidebar
    grid-area sidebar
  &--content
    grid-area content
    overflow-y scroll
  &--loader
    align-items center
    display flex
    height 100%
    justify-content center
    width 100%
