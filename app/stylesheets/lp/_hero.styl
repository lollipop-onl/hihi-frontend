.hero
  background-image linear-gradient(to left, lighten($_primary, 40%), $_primary)
  height 640px
  width 100%
  &--wrapper
    align-items center
    display flex
    height 640px
  // .hero--content
  &--content
    width 65%
    h2
      color #fff
      font-size 18px
      font-weight normal
      letter-spacing .3em
    h1
      color #fff
      font-size 32px
    p
      color #fff
      font-size 12px
      line-height 1.7
  &--button-gruop
    display flex
  &--button
    border 1px solid
    border-radius 16px
    display inline-block
    font-size 12px
    height 32px
    line-height 32px
    padding 0 20px
    text-decoration none
    transition all .12s ease
    &:not(:first-child)
      margin-left 20px
    &__primary
      @extend .hero--button
      background $_accent
      border-color $_accent
      color #fff
      &:hover
        background transparent
        color $_accent
    &__outline
      @extend .hero--button
      background transparent
      border-color #fff
      color #fff
      &:hover
        background #fff
        color $_primary
  // .hero--visual
  &--visual
    width 35%

  // モバイル向け
  +mobile()
    &--content
      width 100%
    &--visual
      display none
